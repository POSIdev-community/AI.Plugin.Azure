{
  "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
  "id": "8189d709-48ff-4c34-b88d-e260600476ec",
  "name": "application-inspector-devops-plugin",
  "friendlyName": "PT Application Inspector",
  "description": "Vulnerabilities Analyzer",
  "helpMarkDown": "",
  "category": "Utility",
  "author": "POSIdev-community",
  "version": {
    "Major": 1,
    "Minor": 3,
    "Patch": 0
  },
  "groups": [
    {
      "name": "reportTypes",
      "displayName": "Generated artifacts",
      "isExpanded": true,
      "visibleRule": "actionMode = scan && synchronizationMode = sync"
    }
  ],
  "instanceNameFormat": "Echo $(samplestring)",
  "inputs": [
    {
      "name": "serverAddress",
      "type": "string",
      "label": "Server address",
      "defaultValue": "",
      "required": true
    },
    {
      "name": "token",
      "type": "string",
      "label": "Access token",
      "defaultValue": "",
      "required": true
    },
    {
      "name": "actionMode",
      "type": "pickList",
      "label": "Action",
      "required": true,
      "defaultValue": "scan",
      "options": {
        "scan": "Scan a project",
        "check": "Check scan results"
      }
    },
    {
      "name": "projectID",
      "type": "string",
      "label": "Project ID",
      "defaultValue": "",
      "required": false,
      "visibleRule": "actionMode = check"
    },
    {
      "name": "scanResultID",
      "type": "string",
      "label": "Scan result ID",
      "defaultValue": "",
      "required": false,
      "visibleRule": "actionMode = check"
    },
    {
      "name": "messageMode",
      "type": "pickList",
      "label": "Get scan messages",
      "required": false,
      "defaultValue": "all",
      "visibleRule": "actionMode = check",
      "options": {
        "all": "All",
        "one": "With current scan status"
      }
    },
    {
      "name": "synchronizationMode",
      "type": "pickList",
      "label": "Scan type",
      "required": false,
      "defaultValue": "sync",
      "visibleRule": "actionMode = scan",
      "options": {
        "sync": "Get full information about the scan",
        "async": "Send the scan results to the server and end the task"
      }
    },
    {
      "name": "projectName",
      "type": "string",
      "label": "Project name",
      "defaultValue": "$(Build.Repository.Name)",
      "visibleRule": "actionMode = scan",
      "required": false,
      "helpMarkDown": "The name of your project on the PT Application Inspector server"
    },
    {
      "name": "branchAtServer",
      "type": "pickList",
      "label": "Branch at PT AI Server",
      "defaultValue": "fromEnvironment",
      "visibleRule": "actionMode = scan",
      "required": true,
      "helpMarkDown": "Will be created if doesn't exist",
      "options": {
        "fromEnvironment": "From pipeline environment",
        "customBranch": "Custom branch"
      }
    },
    {
      "name": "customBranchName",
      "type": "string",
      "label": "Branch name",
      "defaultValue": "",
      "required": true,
      "visibleRule": "branchAtServer = customBranch"
    },
    {
      "name": "settingsType",
      "type": "pickList",
      "label": "Settings",
      "required": false,
      "defaultValue": "default",
      "visibleRule": "actionMode = scan",
      "options": {
        "default": "Default",
        "enterNew": "Custom"
      }
    },
    {
      "name": "newSettings",
      "type": "multiLine",
      "label": "New settings",
      "defaultValue": "",
      "required": false,
      "visibleRule": "actionMode = scan && settingsType = enterNew"
    },
    {
      "name": "policyFail",
      "type": "boolean",
      "label": "Strict policy compliance",
      "defaultValue": true,
      "visibleRule": "actionMode = scan",
      "required": false,
      "helpMarkDown": "Fail the pipeline if the security policy is not complied with"
    },
    {
      "name": "policyScanType",
      "type": "pickList",
      "label": "Security policy",
      "required": false,
      "defaultValue": "existing",
      "visibleRule": "actionMode = scan",
      "helpMarkDown": "Use the existing policy or create your own. If you create you own, it will automatically overwrite the existing policy.",
      "options": {
        "existing": "Existing",
        "enterNew": "New"
      }
    },
    {
      "name": "checkTemplate",
      "type": "boolean",
      "label": "Insert the policy template",
      "defaultValue": false,
      "helpMarkDown": "Use the security policy template to write your own policy",
      "required": false,
      "visibleRule": "actionMode = scan && policyScanType = enterNew"
    },
    {
      "name": "newPolicies",
      "type": "multiLine",
      "label": "New security policy",
      "defaultValue": "",
      "required": false,
      "visibleRule": "actionMode = scan && policyScanType = enterNew && checkTemplate = false"
    },
    {
      "name": "newPoliciesWithTemplate",
      "type": "multiLine",
      "label": "New security policy",
      "defaultValue": "[\n  {\n    \"CountToActualize\": 1,\n    \"Scopes\": [\n      {\n        \"Rules\": [\n          {\n            \"Field\": \"VulnerabilityLevel\",\n            \"Value\": \"High\",\n            \"IsRegex\": false\n          },\n          {\n            \"Field\": \"IsSuspected\",\n            \"Value\": \"false\",\n            \"IsRegex\": false\n          },\n          {\n            \"Field\": \"ApprovalState\",\n            \"Value\": \"[^2]\",\n            \"IsRegex\": true\n          }\n        ]\n      }\n    ]\n  }\n]",
      "required": false,
      "visibleRule": "actionMode = scan && policyScanType = enterNew && checkTemplate = true"
    },
    {
      "name": "logLevel",
      "type": "pickList",
      "label": "Scan logging level",
      "required": false,
      "defaultValue": "error",
      "visibleRule": "actionMode = scan",
      "options": {
        "trace": "Trace",
        "debug": "Debug",
        "info": "Info",
        "warning": "Warning",
        "error": "Error",
        "fatal": "Fatal",
        "none": "None"
      }
    },
    {
      "name": "html",
      "type": "boolean",
      "label": "Scan results report",
      "defaultValue": false,
      "required": false,
      "groupName": "reportTypes"
    },
    {
      "name": "sarif",
      "type": "boolean",
      "label": "Scan results SARIF report",
      "defaultValue": false,
      "required": false,
      "groupName": "reportTypes"
    },
    {
      "name": "autocheck",
      "type": "boolean",
      "label": "Autocheck report",
      "defaultValue": false,
      "required": false,
      "groupName": "reportTypes"
    },
    {
      "name": "owasp",
      "type": "boolean",
      "label": "OWASP top 10 2021 report",
      "defaultValue": false,
      "required": false,
      "groupName": "reportTypes"
    },
    {
      "name": "pcidss",
      "type": "boolean",
      "label": "PCI DSS 3.2 report",
      "defaultValue": false,
      "required": false,
      "groupName": "reportTypes"
    },
    {
      "name": "nist",
      "type": "boolean",
      "label": "NIST 800-53 Rev. 4 report",
      "defaultValue": false,
      "required": false,
      "groupName": "reportTypes"
    },
    {
      "name": "sans",
      "type": "boolean",
      "label": "SANS top 25 report",
      "defaultValue": false,
      "required": false,
      "groupName": "reportTypes"
    },
    {
      "name": "owaspm",
      "type": "boolean",
      "label": "OWASP mobile top 10 2016 report",
      "defaultValue": false,
      "required": false,
      "groupName": "reportTypes"
    },
    {
      "name": "oud4",
      "type": "boolean",
      "label": "Report EAL4 (GOST 15408-3)",
      "defaultValue": false,
      "required": false,
      "groupName": "reportTypes"
    },
    {
      "name": "json",
      "type": "boolean",
      "label": "Scan results JSON report",
      "defaultValue": false,
      "required": false,
      "groupName": "reportTypes"
    },
    {
      "name": "xml",
      "type": "boolean",
      "label": "Scan results XML report",
      "defaultValue": false,
      "required": false,
      "groupName": "reportTypes"
    }
  ],
  "execution": {
    "Node16": {
      "target": "out/index.js"
    }
  }
}
